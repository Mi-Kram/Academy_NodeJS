<!DOCTYPE html>

mixin list(id, ...items)
	ul(id=id)
	each item in items
		li= item

<html>
<head>
	<title>#{title}</title>
	<meta charset="utf-8" />
</head>
<body> 
	<h1>#{title}</h1>
	if showList
		<h3>List of items</h3>
		ul
			each item in list
				li= item
	else
		<h3>No items</h3>
		
	+list('my-list', 1, 2, 3, 4, 5)
	
	ul
		- for (var x = 0; x < 3; x++)
			li str
	
	- var n = 0;
	ul
		while n < 4
			li= n++
</body>
